// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id          String        @id @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  nombre      String
  apellido    String
  email       String        @unique
  password    String
  activo      Boolean       @default(true)
  solicitudes Solicitudes[]
}

model Solicitudes {
  id            String            @id @default(uuid())
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  items         ItemsEnSolcitud[]
  solicitante   Usuarios          @relation(fields: [solicitanteId], references: [id])
  solicitanteId String
}

model ItemsEnSolcitud {
  solicitud   Solicitudes @relation(fields: [solicitudId], references: [id])
  solicitudId String
  item        Items       @relation(fields: [itemId], references: [id])
  itemId      String
  cantidad    Int

  @@id([solicitudId, itemId])
}

model Items {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  descripcion     String
  marca           String
  serie           String            @unique
  ubicacion       Ubicaciones       @relation(fields: [ubicacionId], references: [id])
  ubicacionId     String
  unidadDeMedida  UnidadesDeMedida  @relation(fields: [unidad], references: [unidad])
  unidad          String
  ItemsEnSolcitud ItemsEnSolcitud[]
}

model UnidadesDeMedida {
  id     String  @id @default(uuid())
  unidad String  @unique
  Items  Items[]
}

model Ubicaciones {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Items[]
}
